block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h4.display-1.m-b-1
          form(method='POST' action='/signgup')
            div.form-group
              label(for='name') Name:
              input#name.form-control(type='text', name='name',required)
             div.form-group
               label(for='email') Email:
                input#name.form-control(type='text', name='email',required)
            div.form-group
              label(for='pw') Password:
              input#pw.form-control(type='password' name='password',required)
            button.btn.btn-primary(type='submit') Submit
            div.form-group
               a(href = "/index").btn.btn-success Sign In
