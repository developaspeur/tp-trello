extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h4.display-1.m-b-1 LOG IN
          form(method='POST' action='/signin')
            div.form-group
              label(for='name') Name:
              input#name.form-control(type='text', name='name',required)
            div.form-group
              label(for='pw') Password:
              input#pw.form-control(type='password' name='password',required)
            div.form-group
              label(for='pw2') Confirm Password:
              input#pw2.form-control(type='password' name='confirmPassword',required)
            button.btn.btn-primary(type='submit') Submit
            div.form-group
              a(href = "/signout").btn.btn-success Sign Out
