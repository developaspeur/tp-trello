extends layout



block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2
          form(method='POST' action='/register')
            div.form-group
              label(for='name') Name:
              input#name.form-control(type='text', name='name',required)
            div.form-group
              label(for='pw') Password:
              input#pw.form-control(type='password' name='password',required)
            div.form-group
              label(for='pw2') Confirm Password:
              input#pw2.form-control(type='password' name='confirmPassword',required)
            button.btn.btn-primary(type='submit') Submit
